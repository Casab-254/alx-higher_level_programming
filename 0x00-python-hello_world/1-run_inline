#!/bin/bash

# Check if PYCODE environment variable is set
if [ -z "$PYCODE" ]; then
    echo "PYCODE environment variable is not set"
    exit 1
fi

# Create a temporary Python file
TMP_PY_FILE=$(mktemp)
echo -e "$PYCODE" > "$TMP_PY_FILE"

# Run the Python code
python "$TMP_PY_FILE"

# Clean up the temporary file
rm "$TMP_PY_FILE"
